# AI Provider Configuration
# Copy this to .env and fill in your API keys

# Primary System (always prioritize local)
PRIMARY_PROVIDER=local

# Cloud Provider API Keys (optional)
OPENAI_API_KEY=your_openai_key_here
ANTHROPIC_API_KEY=your_claude_key_here
GOOGLE_API_KEY=your_gemini_key_here
GROQ_API_KEY=your_groq_key_here

# Provider Configuration
ENABLE_CLAUDE=false
ENABLE_OPENAI=false
ENABLE_GEMINI=false
ENABLE_GROQ=false

# Local Model Configuration
LOCAL_MODEL_PATH=./models/local_lyric_generator.gguf
RHYME_MODEL_PATH=./models/local_rhyme_engine.gguf
USE_GPU=false
MAX_TOKENS=512

# Database Configuration
DATABASE_PATH=./data/metrics.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG_MODE=false

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
ENABLE_RATE_LIMITING=true

# Offline Mode
OFFLINE_MODE=false
FALLBACK_TO_LOCAL=true

# Training Configuration
TRAINING_DATA_PATH=./data/training_lyrics.json
COLAB_CHECKPOINT_PATH=/content/drive/MyDrive/rapper-checkpoints/
